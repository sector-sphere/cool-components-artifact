{
  "name": "@lit/lit-starter-js",
  "private": true,
  "version": "2.0.1",
  "description": "A simple web component",
  "main": "my-element.js",
  "module": "my-element.js",
  "type": "module",
  "scripts": {
    "analyze": "cem analyze --litelement --globs \"src\"",
    "build:components": "rollup -c",
    "start": "web-dev-server",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .eslintignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .eslintignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .eslintignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .eslintignore",
    "storybook": "npm run analyze && storybook dev -p 6007",
    "storybook:build": "npm run analyze && storybook build && npm run copy:metadata",
    "copy:metadata": "cpy \"metadata.json\" \"storybook-static\"",
    "test": "npx playwright install && web-test-runner --node-resolve",
    "test:coverage": "npx playwright install && web-test-runner --coverage",
    "test:watch": "npx playwright install && web-test-runner --watch"
  },
  "peerDependencies": {
    "lit": "^2.7.0 || ^3.0.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.9.0",
    "@open-wc/eslint-config": "^12.0.0",
    "@open-wc/testing": "^3.2.0",
    "@rollup/plugin-commonjs": "25.0.4",
    "@rollup/plugin-node-resolve": "15.2.0",
    "@storybook/addon-a11y": "^7.5.0",
    "@storybook/addon-essentials": "^7.5.0",
    "@storybook/addon-links": "^7.5.0",
    "@storybook/blocks": "^7.5.0",
    "@storybook/web-components-webpack5": "^7.5.0",
    "@web/dev-server": "^0.3.4",
    "@web/test-runner": "^0.17.2",
    "@web/test-runner-playwright": "^0.10.1",
    "commitlint": "^17.6.3",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-lit-a11y": "^4.1.0",
    "eslint-plugin-storybook": "^0.6.14",
    "husky": "^8.0.0",
    "keycloak-js": "~22.0.0",
    "lint-staged": "^14.0.1",
    "lit": "^3.0.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark-gfm": "^3.0.1",
    "rollup": "3.28.0",
    "rollup-plugin-lit-css": "4.0.1",
    "sinon": "^16.1.0",
    "storybook": "^7.5.0"
  },
  "customElements": "custom-elements.json",
  "files": [
    "src/",
    "CHANGELOG.md",
    "index.js"
  ]
}

